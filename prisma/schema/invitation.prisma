model Invitation {
    id          String           @id @default(auto()) @map("_id") @db.ObjectId
    email       String
    token       String
    workSpaceId String           @db.ObjectId
    status      InvitationStatus @default(PENDING)
    createdAt   DateTime         @default(now())
    updatedAt   DateTime         @updatedAt

    @@index([email])
    @@index([id])
    
}

enum InvitationStatus {
    PENDING
    ACCEPTED
    DECLINED
}

